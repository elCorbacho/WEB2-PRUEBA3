<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ========================================
         PROPIEDADES Y VARIABLES
         ======================================== -->
    
    <!-- Nombre de la aplicación desde properties -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="prueba3"/>
    
    <!-- Nivel de log desde properties (permite cambiar sin recompilar) -->
    <springProperty scope="context" name="LOG_LEVEL" source="logging.level.root" defaultValue="INFO"/>
    
    <!-- Directorio de logs -->
    <property name="LOG_PATH" value="${LOG_PATH:-logs}"/>
    
    <!-- Conversores de color -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter" />
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter" />
    <conversionRule conversionWord="highlight" converterClass="org.springframework.boot.logging.logback.ColorConverter" />

    <!-- ========================================
         PATRONES DE LOG (LAYOUTS)
         ======================================== -->
    
    <!-- Patrón para CONSOLA (desarrollo) - Con colores, MDC context y highlight -->
    <property name="CONSOLE_LOG_PATTERN" 
              value="%clr(%d{HH:mm:ss.SSS}){faint} %highlight(%5p) %clr([%X{requestId:---------}]){yellow} %clr([%X{method:-SYS}]){blue} %clr([%X{clientIp:-localhost}]){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n%clr(%ex){red}"/>
    
    <!-- Patrón para ARCHIVO (producción) - Sin colores, formato estructurado -->
    <property name="FILE_LOG_PATTERN" 
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p ${PID:- } [%X{requestId}] [%X{method}] [%X{clientIp}] --- [%t] %-40.40logger{39} : %m%n%wEx"/>

    <!-- ========================================
         APPENDER: CONSOLA (Desarrollo)
         ======================================== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- Filtro de nivel mínimo -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ========================================
         APPENDER: ARCHIVO GENERAL
         ======================================== -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <!-- Política de rotación -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Rotación diaria con índice -->
            <fileNamePattern>${LOG_PATH}/${APP_NAME}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- Tamaño máximo por archivo -->
            <maxFileSize>10MB</maxFileSize>
            <!-- Días de retención -->
            <maxHistory>30</maxHistory>
            <!-- Tamaño total máximo (limpia automáticamente) -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ========================================
         APPENDER: ARCHIVO DE ERRORES
         ======================================== -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}-error.log</file>
        
        <!-- Solo errores y fatales -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}-error-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <!-- Errores se mantienen más tiempo -->
            <maxHistory>90</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ========================================
         APPENDER: ASYNC (Performance)
         ======================================== -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <!-- No bloquea el thread principal -->
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <appender-ref ref="FILE" />
    </appender>

    <appender name="ASYNC_ERROR_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
        <appender-ref ref="ERROR_FILE" />
    </appender>

    <!-- ========================================
         LOGGERS POR PAQUETE (Granularidad)
         ======================================== -->
    
    <!-- ===== TU APLICACIÓN ===== -->
    <logger name="cl.web2.prueba3.prueba3" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Controladores API REST -->
    <logger name="cl.web2.prueba3.prueba3.controllers.api" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Controladores Web MVC -->
    <logger name="cl.web2.prueba3.prueba3.controllers.web" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Servicios de negocio -->
    <logger name="cl.web2.prueba3.prueba3.services" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Manejo global de excepciones -->
    <logger name="cl.web2.prueba3.prueba3.config.GlobalExceptionHandler" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Seguridad -->
    <logger name="cl.web2.prueba3.prueba3.config.SecurityConfig" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- ===== SPRING FRAMEWORK ===== -->
    <logger name="org.springframework" level="ERROR"/>
    <logger name="org.springframework.web" level="ERROR"/>
    <logger name="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping" level="ERROR"/>
    <logger name="org.springframework.security" level="ERROR"/>
    <logger name="org.springframework.boot" level="ERROR"/>
    <logger name="org.springframework.boot.autoconfigure" level="ERROR"/>
    
    <!-- ===== PERSISTENCIA ===== -->
    
    <!-- Hibernate SQL -->
    <logger name="org.hibernate.SQL" level="ERROR"/>
    
    <!-- Parámetros de SQL (valores) -->
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="ERROR"/>
    
    <!-- Transacciones -->
    <logger name="org.hibernate.engine.transaction" level="ERROR"/>
    
    <!-- Caché de segundo nivel (si se usa) -->
    <logger name="org.hibernate.cache" level="ERROR"/>
    
    <!-- HikariCP - Connection Pool -->
    <logger name="com.zaxxer.hikari.HikariConfig" level="ERROR"/>
    <logger name="com.zaxxer.hikari.HikariDataSource" level="ERROR"/>
    
    <!-- ===== BASE DE DATOS ===== -->
    <logger name="org.h2.server.web" level="ERROR"/>
    
    <!-- ===== THYMELEAF ===== -->
    <logger name="org.thymeleaf" level="ERROR"/>
    <logger name="org.thymeleaf.TemplateEngine" level="ERROR"/>
    
    <!-- ===== JACKSON (JSON) ===== -->
    <logger name="com.fasterxml.jackson" level="ERROR"/>
    
    <!-- ===== TOMCAT ===== -->
    <logger name="org.apache.catalina" level="ERROR"/>
    <logger name="org.apache.tomcat" level="ERROR"/>

    <!-- ========================================
         PERFILES (Ambientes)
         ======================================== -->
    
    <!-- DESARROLLO -->
    <springProfile name="dev,local">
        <logger name="cl.web2.prueba3.prueba3" level="ERROR"/>
        <logger name="org.hibernate.SQL" level="ERROR"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="ERROR"/>
        
        <root level="ERROR">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
    
    <!-- TESTING -->
    <springProfile name="test">
        <logger name="cl.web2.prueba3.prueba3" level="INFO"/>
        <logger name="org.hibernate.SQL" level="INFO"/>
        
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
    
    <!-- PRODUCCIÓN -->
    <springProfile name="prod">
        <logger name="cl.web2.prueba3.prueba3" level="INFO"/>
        <logger name="org.hibernate.SQL" level="WARN"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="WARN"/>
        
        <root level="WARN">
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ASYNC_ERROR_FILE"/>
        </root>
    </springProfile>

    <!-- ========================================
         ROOT LOGGER (Por defecto)
         ======================================== -->
    <root level="ERROR">
        <appender-ref ref="CONSOLE"/>
        <!-- Archivos de log desactivados -->
        <!-- <appender-ref ref="ASYNC_FILE"/> -->
        <!-- <appender-ref ref="ASYNC_ERROR_FILE"/> -->
    </root>

</configuration>
